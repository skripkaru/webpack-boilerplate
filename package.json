{
  "version": "1.0.0",
  "name": "webpack-boilerplate",
  "description": "This template provides a basic structure for developing websites. It is designed to ease the initial stages of project work by offering minimal setup for frontend development.",
  "author": "Evgeniy Skripkaru",
  "license": "ISC",
  "scripts": {
    "dev": "webpack serve",
    "build": "webpack build --mode=production",
    "lint": "npx eslint \"src/**/*.js\" --fix",
    "lint:css": "npx stylelint \"src/**/*.scss\" --fix",
    "format": "prettier --ignore-path .gitignore --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "handlebars": "^4.7.8",
    "html-bundler-webpack-plugin": "^3.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "postcss": "^8.4.20",
    "postcss-loader": "^7.0.2",
    "postcss-preset-env": "^7.8.3",
    "prettier": "^2.8.1",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "stylelint": "^14.16.1",
    "stylelint-config-clean-order": "^5.0.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^4.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "focus-visible": "^5.2.0",
    "normalize.css": "^8.0.1"
  }
}
